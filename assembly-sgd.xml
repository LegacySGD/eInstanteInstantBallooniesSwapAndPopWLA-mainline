<assembly>
	<id>sgd</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>.settings</exclude>
				<exclude>.classpath</exclude>
				<exclude>.project</exclude>
			</excludes>
			<includes>
				<include>.*</include>
				<include>GLEConfig.xml</include>
			</includes>
		</fileSet>
		<!-- APP -->
		<fileSet>
			<directory>${basedir}/target/dbgames/demo/datafiles</directory>
			<outputDirectory>/app/unfiltered/tools/gleForce</outputDirectory>
			<!-- *Force.html and *Force.xml generated by GleGameParser will be copied to gleForce foler -->
			<includes>
				<include>*-Force*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/app/unfiltered/tools/gleForce</directory>
			<outputDirectory>/app/unfiltered/tools/gleForce</outputDirectory>
			<!-- *Force.html and *Force.xml generated by GleGameParser will be copied to gleForce foler -->
			<includes>
				<include>*-Force*.*</include>
			</includes>
		</fileSet>
		<!-- WEB -->
		<fileSet>
			<directory>${basedir}/target/web</directory>
			<outputDirectory>/web</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>gamefiles/**/datafiles/*xml*.jar</include>
				<include>gamefiles/**/datafiles/*ghst*.jar</include>
				<include>gamefiles/**/datafiles/*.buildtag</include>
				<include>gamefiles/**/*.sql</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
